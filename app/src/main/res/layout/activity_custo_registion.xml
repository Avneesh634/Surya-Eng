<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_custo_registion"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/nmlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:weightSum="1">

                <EditText
                    android:id="@+id/ufname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_corner"
                    android:hint="First Name"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/ulname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uname"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_corner"
                    android:hint="Last Name"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/splayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nmlayout"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/sproduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_corner"
                    android:entries="@array/complain_by" />

                <Spinner
                    android:id="@+id/smodel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sproduct"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_corner"
                    android:entries="@array/complain_by" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sdlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/splayout"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:weightSum="1">

                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_corner"
                    android:hint="Date of Purchase"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/serial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_corner"
                    android:hint="Serial No."
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sdlayout"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:weightSum="1">

                <EditText
                    android:id="@+id/dealer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_corner"
                    android:gravity="top"
                    android:hint="Dealer Detail"
                    android:inputType="textMultiLine"
                    android:minHeight="50dp" />

                <EditText
                    android:id="@+id/bill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_corner"
                    android:hint="Bill No."
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/splayout"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:padding="15dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/summit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/serial"
                    android:layout_weight="0.2"
                    android:background="@drawable/buttonstyle"
                    android:text="Submit"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
